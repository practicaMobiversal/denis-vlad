<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_foreground"
    tools:context=".PreferencesActivity">




    <TextView
        android:id="@+id/btn_actors"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:text="ACTORS"
        android:textSize="20dp"
        android:textColor="#0000A0"
        app:layout_constraintBottom_toTopOf="@id/genres"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genres"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:text="GENRES"
        android:textSize="20dp"
        android:textColor="#0000A0"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/keywords"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_actors" />

    <EditText
        android:id="@+id/keywords"
        android:layout_width="300dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/genres"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#0000A0"
        android:textSize="20dp"
        android:hint="Keywords" />

    <TextView
        android:id="@+id/preferences"
        android:layout_width="185dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:text="PREFERENCES"
        android:textColor="#306EFF"
        android:textColorHint="#C51162"
        android:textColorLink="#DD2C00"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:text="SAVE"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>